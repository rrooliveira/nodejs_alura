<html>
    <head>
        <meta charset="utf-8" />
    </head>
    <body>
        <h1>Books List</h1>

        <table id="books">
            <tr>
                <td>ID</td>
                <td>Título</td>
                <td>Preço</td>
                <td>Editar</td>
                <td>Remover</td>
            </tr>
            <tr id="book_${book.id}" for(book in data.books)>
                <td>${book.id}</td>
                <td>${book.title}</td>
                <td>${book.price}</td>
                <td><a href="/books/${book.id}">Editar</a></td>
                <td><a href="#" data-ref="${book.id}" data-type="remocao">Remover</a></td>
            </tr>
        </table>
        <script src="/static/js/remove-book.js"></script> 
    </body>
</html>